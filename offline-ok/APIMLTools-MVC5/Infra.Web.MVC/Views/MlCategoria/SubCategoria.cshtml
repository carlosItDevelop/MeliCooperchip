@model IEnumerable<Infra.Entidades.ObjML.ListaDeSubCategoriaComQtde>

@{
    ViewBag.Title = "Lista de Sub-Categorias";
}

@{
    ViewBag.Title = "Lista de Sub-Categorias";
}

<div class="container">
    <div class="row">


        <h2>Lista de Sub-Categorias do Mercadolivre</h2>

        <p>
            @Html.ActionLink("Adicionar Sub-Categoria", "Create", null, new { @class="btn btn-default btn-sm" })
        </p>
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.permalink)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.total_items_in_this_category)
                </th>
                <th>
                    Sub-categoria
                </th>
                <th colspan="3" class="text-center">Ação</th>
            </tr>

            @foreach(var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.permalink)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.total_items_in_this_category)
                    </td>
                    <td>
                        @Html.ActionLink("Acessar", "DetalhesSubCategoria", "MlCategoria", new { id=item.id }, new { @class="btn btn-default btn-sm" })
                    </td>

                    <td colspan="3" class="text-center">
                        @Html.ActionLink("Editar", "Edit", new { id=item.id }, new { @class="btn btn-default btn-sm" })
                        @Html.ActionLink("Detalhes", "Details", new { id=item.id }, new { @class="btn btn-default btn-sm" })
                        @Html.ActionLink("Excluir", "Delete", new { id=item.id }, new { @class="btn btn-danger btn-sm" })
                    </td>

                </tr>
            }

        </table>
    </div>
</div>