@model IEnumerable<Infra.Entidades.ObjML.ChildrenCategory>


@{
    ViewBag.Title = "Lista de Sub-Categorias - ";
}


<div class="container">
    <div class="row">


        <h2>Sub-Categorias do Mercadolivre - @ViewBag.TituloSubcategoria</h2>
        @*<h2>Sub-Categorias do Mercadolivre</h2>*@

        <p>
            @Html.ActionLink("Adicionar Sub-Categoria", "Create", null, new { @class="btn btn-default btn-sm" })
        </p>

        <table class="table table-striped">
            <tr>
                <th>
                    Id da Sub-Categoria
                </th>
                <th>
                    Descrição da Subcategoria
                </th>
                <th>
                    Anúncios na Categoria
                </th>
                <th colspan="3" class="text-center">Ação</th>
            </tr>

            @foreach(var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.total_items_in_this_category)
                    </td>
                    <td colspan="3" class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id=item.id }, new { @class="btn btn-default btn-sm" })
                        @Html.ActionLink("Details", "Details", new { id=item.id }, new { @class="btn btn-default btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id=item.id }, new { @class="btn btn-danger btn-sm" })
                    </td>
                </tr>
            }

        </table>
        
    </div>
</div>
