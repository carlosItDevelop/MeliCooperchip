@model IEnumerable<Infra.Entidades.ObjML.TipoPublicidade>

@{
    ViewBag.Title = "Tipo de Publicidade";
}

<div class="container">
    <div class="row">


        <h2>Lista de Tipo de Publicidade do Mercadolivre</h2>

        <p>
            @Html.ActionLink("Adicionar Tipo de Publicidade", "Create", null, new { @class="btn btn-default btn-sm" })
        </p>

        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.site_id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th></th>
            </tr>

            @foreach(var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.site_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id=item.id }, new { @class="btn btn-default btn-sm" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
