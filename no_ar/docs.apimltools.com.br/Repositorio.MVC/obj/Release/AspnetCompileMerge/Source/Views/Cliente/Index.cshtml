@model IEnumerable<Repositorio.Entidades.Cliente>

@{
    ViewBag.Title = "APIML | Tools";
}

<h2>APIML | Tools - Clientes</h2>

<p>
    @Html.ActionLink("Novo Cliente", "Create", "Index", new { @class = "btn btn-success btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CpfCnpj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Telefones)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DDD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bairro)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.DescricaoServico)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.TecnologiaRequerida)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th colspan="3" class="text-center">Ação</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.CpfCnpj)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Telefones)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DDD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bairro)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.DescricaoServico)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.TecnologiaRequerida)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td colspan="3" class="text-center">
            @Html.ActionLink("Editar", "Edit", new { id=item.ClienteID }, new { @class = "btn btn-default btn-sm" })
            @Html.ActionLink("Detalhes", "Details", new { id=item.ClienteID }, new { @class = "btn btn-default btn-sm" })
            @Html.ActionLink("Excluir", "Delete", new { id=item.ClienteID }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
