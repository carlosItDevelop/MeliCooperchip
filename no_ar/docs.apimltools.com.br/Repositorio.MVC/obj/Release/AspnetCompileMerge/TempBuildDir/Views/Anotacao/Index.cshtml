@model IEnumerable<Repositorio.Entidades.Anotacao>

@{
    ViewBag.Title = "APIML | Tools";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nova Nota", "Create", "Index", new {@class="btn btn-info btn-sm"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.DataAnotacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th colspan="3" class="text-center">Ação</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tags)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.DataAnotacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td colspan="3" class="text-center">
            @Html.ActionLink("Editar", "Edit", new { id=item.AnotacaoID }, new { @class = "btn btn-default btn-sm" })
            @Html.ActionLink("Detalhes", "Details", new { id=item.AnotacaoID }, new { @class = "btn btn-default btn-sm" })
            @Html.ActionLink("Excluir", "Delete", new { id=item.AnotacaoID }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
