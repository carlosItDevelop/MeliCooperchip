@model IEnumerable<Repositorio.Entidades.Favoritos>

@{
    ViewBag.Title = "APIML | Tools - Favoritos";
}

<div class="page-header">
    <h3>APIML | Tools - Lista e Filtro de Favoritos</h3>
</div>

<div class="panel">
    @Html.ActionLink("Adicionar Favorito", "Create", null,  new { @class="btn btn-default btn-sm" })
</div>

<div class="panel-body">

    @using(Html.BeginForm("Index", "Favoritos", FormMethod.Get)) {

        <div class="row">
            <div class="form-inline form-group">
                @Html.DropDownList("tList", null, "Todos os Favoritos", new { @class = "form-control col-lg-3" })
                <div class="input-group col-lg-4">
                    <input type="text" name="SearchString" class="form-control" placeholder="Digite a Tag...&hellip;">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Buscar</button>
                    </span>
                </div>

            </div>

        </div>

    }

</div>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Source)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Tag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th class="text-center" colspan="3">Ação</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Source)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Tag)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>
        <td class="text-center" colspan="3">
            @Html.ActionLink("Editar", "Edit", new {id = item.FavoritosId}, new {@class = "btn btn-default btn-sm"})
            @Html.ActionLink("Detalhes", "Details", new {id = item.FavoritosId}, new {@class = "btn btn-default btn-sm"})
            @Html.ActionLink("Excluir", "Delete", new {id = item.FavoritosId}, new {@class = "btn btn-danger btn-sm"})
        </td>
    </tr>
}

</table>
