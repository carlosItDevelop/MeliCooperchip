<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cooperchip | Note</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <i class="glyphicon-home"></i> 
                @Html.ActionLink("Cooperchip | Note", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
               <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Páginas <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li class="divider"></li>                                
                                <li>@Html.ActionLink("Sobre Nós", "About", "Home")</li>
                                <li>@Html.ActionLink("Fale Conosco", "Contact", "Home")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Experts", "Index", "Expert")</li>
                                <li>@Html.ActionLink("Favoritos", "Index", "Favoritos")</li>
                                <li>@Html.ActionLink("Tarefas", "Index", "TaskList")</li>
                                <li>@Html.ActionLink("Profiles", "Index", "HostProfile")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Testes", "Index", "Testes")</li>
                                <li><a href="../../readme/repositorio.html" target="_blank">Artigo MSDN</a></li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Cliente", "Index", "Cliente")</li>
                        <li>@Html.ActionLink("Agenda", "Index", "Agenda")</li>
                        <li>@Html.ActionLink("Contato", "Index", "Contato")</li>
                        <li>@Html.ActionLink("Antações", "Index", "Anotacao")</li>
                        <li>@Html.ActionLink("Programa de Estudo", "Index", "ProgramaDeEstudo")</li>
                    </ul>

                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Cooperchip | Note</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
    </html>
